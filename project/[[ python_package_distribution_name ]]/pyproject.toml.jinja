[tool.poetry]
name = "[[ python_package_distribution_name ]]"
version = "0.1.0"
description = "[[ project_description ]]"
authors = ["[[ author_fullname ]] <[[ author_email ]]>"]
license = "[[ copyright_license ]]"
readme = "README.md"
repository = "https://[[ repository_provider ]]/[[ repository_namespace ]]/[[ repository_name ]]"
homepage = "https://[[ repository_provider ]]/[[ repository_namespace ]]/[[ repository_name ]]"
keywords = []
packages = [ { include = "[[ python_package_import_name ]]", from = "[[ python_package_distribution_name ]]" } ]

[tool.poetry.dependencies]
python = ">=3.8,<4.0"
# TODO: uncomment when volttron 0.1.0 is available
# volttron = "^0.1.0"

[tool.poetry.dev-dependencies]
# formatting, quality, tests
pytest = "^6.2.5"
mock = "^4.0.3"
pre-commit = "^2.17.0"
yapf = "^0.32.0"
toml = "^0.10.2"

[tool.yapfignore]
ignore_patterns = [
    ".venv/**",
    ".pytest_cache/**",
    "dist/**",
    "docs/**"
]

[tool.yapf]
based_on_style = "pep8"
spaces_before_comment = 4
column_limit = 99
split_before_logical_operator = true

[tool.poetry.scripts]
[[ python_package_command_line_name ]] = "[[ python_package_import_name ]].agent:main"

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"

# tasks
duty = ">=0.6.0"
git-changelog = ">=0.5.0"
httpx = ">=0.16.1"
jinja2-cli = ">=0.7.0"
toml = ">=0.10.2"


# docs
mkdocs = ">=1.2.2"
mkdocs-coverage = ">=0.2.1"
mkdocs-macros-plugin = ">=0.5.0"
mkdocs-material = ">=6.2.7"
mkdocstrings = ">=0.16.2"
